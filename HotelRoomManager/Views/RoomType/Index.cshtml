@model IEnumerable<HotelRoomManager.Models.ViewModels.RoomTypeViewModels.RoomTypeViewModel>
@{
    ViewData["Title"] = "Room Types";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

@if (TempData["Success"] is string s) { <div class="alert alert-success">@s</div> }
@if (TempData["Error"]   is string e) { <div class="alert alert-danger">@e</div> }

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="text-muted">@Model.Count() room type(s)</div>
    <a asp-controller="RoomType" asp-action="Create" class="btn btn-primary">Create Room Type</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th>Capacity</th>
            <th>Description</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Name</td>
            <td>@t.Capacity</td>
            <td>@t.Description</td>
            <td>
                <a asp-controller="RoomType" asp-action="Edit" asp-route-id="@t.Id"
                   class="btn btn-sm btn-outline-secondary me-2">Edit</a>

                <form asp-controller="RoomType" asp-action="Delete" asp-route-id="@t.Id"
                      method="post" class="d-inline"
                      onsubmit="return confirm('Delete room type @t.Name?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
