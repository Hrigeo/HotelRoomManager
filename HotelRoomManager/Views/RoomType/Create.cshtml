@model HotelRoomManager.Models.ViewModels.RoomTypeViewModels.RoomTypeCreateViewModel
@{
    ViewData["Title"] = "Create Room Type";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capacity" class="form-label"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Rooms" asp-action="Index" class="btn btn-secondary ms-2">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
