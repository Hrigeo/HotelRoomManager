@using HotelRoomManager.Models.ViewModels.RoomViewModels
@model RoomEditViewModel
@{
    ViewData["Title"] = "Edit Room";
}

<h2>Edit Room</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />

    <!-- Room number & price side-by-side -->
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Number" class="form-label"></label>
            <!-- text + numeric keypad, no spinner -->
            <input asp-for="Number" class="form-control" type="text" inputmode="numeric" pattern="[0-9]*" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PricePerNight" class="form-label"></label>
            <!-- keep number for proper decimal keyboard; spinners hidden via CSS below -->
            <input asp-for="PricePerNight" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="PricePerNight" class="text-danger"></span>
        </div>
    </div>

    <!-- Availability (bool) as toggle buttons -->
    <div class="mb-3 mt-3">
        <label class="form-label">Availability</label>
        <div class="btn-group" role="group" aria-label="Availability">
            <input type="radio" class="btn-check" asp-for="IsAvailable" id="availTrue" value="true" />
            <label class="btn btn-outline-success" for="availTrue">Available</label>

            <input type="radio" class="btn-check" asp-for="IsAvailable" id="availFalse" value="false" />
            <label class="btn btn-outline-danger" for="availFalse">Not Available</label>
        </div>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <!-- Room type dropdown -->
    <div class="mb-3">
        <label asp-for="RoomTypeId" class="form-label"></label>
        <select asp-for="RoomTypeId" class="form-select" asp-items="Model.RoomTypes"></select>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="All" class="btn btn-outline-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        /* hide spinners on number inputs */
        input[type=number]::-webkit-outer-spin-button,
        input[type=number]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance: textfield;
            appearance: textfield;
        }
    </style>
}
