@using HotelRoomManager.Models.ViewModels.Rooms
@using HotelRoomManager.Data.Models.Rooms   
@model RoomDetailsViewModel

@{
    ViewData["Title"] = $"Room {Model.Number}";
    // Human-friendly status text and badge color
    Func<bool, string> statusText = a => a == true ? "Available" : "Not Available";
    Func<bool, string> badgeClass = a => a == true ? "badge bg-success" : "badge bg-danger";

    bool isAdmin = User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin");
}

<h1 class="mb-3">Room @Model.Number</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Room Number</dt>
                    <dd class="col-sm-7">@Model.Number</dd>

                    <dt class="col-sm-5">Type</dt>
                    <dd class="col-sm-7">@Model.RoomTypeName</dd>

                    <dt class="col-sm-5">Capacity</dt>
                    <dd class="col-sm-7">@Model.RoomTypeCapacity</dd>

                    <dt class="col-sm-5">Price / Night</dt>
                    <dd class="col-sm-7">@Model.PricePerNight.ToString("C")</dd>

                    <dt class="col-sm-5">Availability</dt>
                    <dd class="col-sm-7">
                        <span class="@badgeClass(Model.Availability)">@statusText(Model.Availability)</span>
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h5 class="mb-2">Room Type Description</h5>
                <p class="text-muted">@Model.RoomTypeDescription</p>
            </div>
        </div>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to list</a>

    @* Show Book only when Available *@
    @if (Model.Availability == true)
    {
        <a asp-controller="Booking"
           asp-action="Create"
           asp-route-roomId="@Model.Id"
           class="btn btn-success">
            Book
        </a>
    }

    @* Admin-only tools (uncomment if you have these actions wired) *@
    @if (isAdmin)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a>
    }
</div>
