

@using HotelRoomManager.Data.Models.Rooms   
@using HotelRoomManager.Models.View_Models.RoomViewModels
@using static HotelRoomManager.Emuns.Class
@model IEnumerable<RoomListViewModel>

@{
    ViewData["Title"] = "Rooms";


    Func<Availability, string> statusText = a => a == Availability.Available ? "Available" : "Not Available";

    Func<Availability, string> badgeClass = a => a == Availability.Available ? "badge bg-success" : "badge bg-danger";

    bool isAdmin = User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin");
}

<h1 class="mb-3">@ViewData["Title"]</h1>

@* Top-right toolbar: only Admins can create rooms *@
@if (isAdmin)
{
    <p class="d-flex justify-content-end">
        <a asp-controller="Rooms" asp-action="Create" class="btn btn-primary">
            Create New
        </a>
    </p>
}

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>Number</th>
            <th>Capacity</th>
            <th>Price / Night</th>
            <th>Room Type</th>
            <th>Availability</th>
            <th style="width: 220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var room in Model)
            {
                <tr>
                    <td>@room.Number</td>
                    <td>@room.Capacity</td>
                    <td>@room.PricePerNight.ToString("C")</td>
                    <td>@room.RoomTypeName</td>
                    <td>
                        <span class="@badgeClass(room.Availability)">@statusText(room.Availability)</span>
                    </td>
                    <td class="text-nowrap">
                        @* Always visible: Details *@
                        <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-outline-secondary btn-sm me-1">
                            Details
                        </a>

                        @if (isAdmin)
                        {
                            @* ADMIN: can Edit/Delete *@
                            <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-outline-primary btn-sm me-1">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-outline-danger btn-sm">
                                Delete
                            </a>
                        }
                        else
                        {
                            @* NON-ADMIN (guests/users): only Book (no Create/Edit/Delete) *@
                            <a asp-controller="Booking"
                               asp-action="Create"
                               asp-route-roomId="@room.Id"
                               class="btn btn-sm btn-primary">
                                Book
                            </a>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No rooms found.</td>
            </tr>
        }
    </tbody>
</table>
