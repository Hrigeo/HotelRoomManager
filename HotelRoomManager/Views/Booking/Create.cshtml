@using HotelRoomManager.Models.ViewModels
@using HotelRoomManager.Models.ViewModels.BookingViewModel
@model BookingCreateViewModel
@{
    ViewData["Title"] = "Create Booking";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-controller="Booking" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- Shows model-level errors (e.g., date rules from IValidatableObject) -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="RoomId" class="form-label"></label>
        <select asp-for="RoomId" asp-items="Model.Rooms" class="form-select">
            <option value="">-- select a room --</option>
        </select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CheckInDate" class="form-label"></label>
        <input asp-for="CheckInDate" type="date" class="form-control" />
        <span asp-validation-for="CheckInDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CheckOutDate" class="form-label"></label>
        <input asp-for="CheckOutDate" type="date" class="form-control" />
        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Booking</button>
</form>

@section Scripts {
    <!-- Client-side validation (jQuery + unobtrusive) -->
    <partial name="_ValidationScriptsPartial" />
}
