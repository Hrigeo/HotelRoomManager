@model IEnumerable<HotelRoomManager.Models.ViewModels.BookingViewModels.BookingSimpleViewModel>
@{
    ViewData["Title"] = "All Bookings";
}

@if (TempData["Success"] is string s)
{
    <div class="alert alert-success">@s</div>
}
@if (TempData["Error"] is string e)
{
    <div class="alert alert-danger">@e</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">All Bookings</h2>
    <a asp-controller="Invoice" asp-action="Index" class="btn btn-outline-primary">
        Invoices
    </a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>Room</th>
            <th>User</th>
            <th>Check-In</th>
            <th>Check-Out</th>
            <th style="width:140px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BookingId</td>
                <td>@b.RoomNumber</td>
                <td>@b.UserEmail</td>
                <td>@b.CheckInDate.ToString("yyyy-MM-dd")</td>
                <td>@b.CheckOutDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <form asp-action="Delete" asp-controller="Booking" method="post"
                          onsubmit="return confirm('Delete reservation #@b.BookingId?');" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@b.BookingId" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    @if (!b.HasInvoice)
                    {
                        <form asp-controller="Invoice"
                              asp-action="Issue"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="bookingId" value="@b.BookingId" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                Issue Invoice
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Invoice"
                           asp-action="Details"
                           asp-route-id="@b.InvoiceId"
                           class="btn btn-sm btn-outline-secondary">
                            View Invoice
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
