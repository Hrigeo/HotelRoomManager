@model IEnumerable<HotelRoomManager.Models.ViewModels.BookingViewModel.BookingSimpleView>
@{
    ViewData["Title"] = "My Bookings";
}

<h2>My Bookings</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have no bookings yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().RoomNumber)</th>
                <th>@Html.DisplayNameFor(m => m.First().CheckInDate)</th>
                <th>@Html.DisplayNameFor(m => m.First().CheckOutDate)</th>
                <th class="text-end">@Html.DisplayNameFor(m => m.First().TotalPrice)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.RoomNumber</td>
                    <td>@b.CheckInDate.ToString("yyyy-MM-dd")</td>
                    <td>@b.CheckOutDate.ToString("yyyy-MM-dd")</td>
                    <td class="text-end">@b.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
